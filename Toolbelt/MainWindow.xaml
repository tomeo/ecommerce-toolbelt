<Window x:Class="Toolbelt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Toolbelt" Height="500" Width="525">
    <DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Top" Height="40">
            <TextBox Name="TxtBrowse" Width="330" Padding="10" IsEnabled="False" />
            <Button Name="BtnBrowse" Click="testFileBrowse_Click" Margin="10,0,0,0" Padding="10">Browse</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Top">
            <TextBox Name="TxtProductIds" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch" Width="200" Height="400" Padding="10"/>
            <TextBox Name="TxtEans" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch" Width="200" Height="400" Padding="10"/>
        </StackPanel>
        <Button Content="Get images" Click="GetImages" DockPanel.Dock="Bottom" Height="20" />
    </DockPanel>
</Window>
